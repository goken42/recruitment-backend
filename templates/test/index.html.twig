{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Users list</h1>

        <br />

        <a href="{{ path('test_new') }}" class="btn btn-primary">Add a new user</a><br />

        <br />

        {% if users|length != 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>username</th>
                        <th>email</th>
                        <th>firstname</th>
                        <th>lastname</th>
                        <th>roles</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role.label }}<br />
                                {% endfor %}
                            </td>
                            <td><a href="{{ path('test_edit', {id: user.id}) }}"><i class="fa fa-pen"></i></a></td>
                            <td><a href="{{ path('test_delete', {id: user.id}) }}"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
